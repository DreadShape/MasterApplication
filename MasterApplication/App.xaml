<Application x:Class="MasterApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MasterApplication"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <materialDesign:CustomColorTheme BaseTheme="Dark"
                         PrimaryColor="#F5E8C7"
                         SecondaryColor="#687f85" />
        <!--<materialDesign:CustomColorTheme BaseTheme="Light"
                                 PrimaryColor="#cc00cc"
                                 SecondaryColor="#00d4d4" />-->

        <ResourceDictionary
                    Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

      </ResourceDictionary.MergedDictionaries>

      <!-- CustomColors -->
      <SolidColorBrush x:Key="PrimaryDarkBackgroundColor" Color="#191919" />
      <SolidColorBrush x:Key="PrimaryMidBackgroundColor" Color="#353535" />
      <SolidColorBrush x:Key="PrimaryLightBackgroundColor" Color="#808080" />
      
    </ResourceDictionary>
  </Application.Resources>
</Application>
